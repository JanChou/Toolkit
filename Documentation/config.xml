<config xmlns="SharpDoc">
  <!-- Title of the generated documentation -->
  <title>SharpDX Documentation</title>

  <!-- Generate default and docpak -->
  <output-type>docpak</output-type>

  <!-- Configure docpak -->
  <docpak name="SharpDXDoc">
    <!-- Add an index to unmanaged tags -->
    <tagindex id="unmanaged" xpath="//html/head/title" name="Unmanaged"/>
  </docpak>
  
  <!-- Defines the style used -->
  <style>Standard</style>

  <!-- Links to topics -->
  <topic id="SharpDX" filename="index.html" name="SharpDX Documentation" >
    <!-- Special topic X:ClassLibrary to include generated class library references-->
    <topic id="X:ClassLibrary" name="SharpDX Class Library" />
  </topic>

  <!-- List the assemblies to include for the class library-->
  <source>..\Temp\TestLibraryDoc\TestLibraryDoc\Bin\Debug\TestLibraryDoc.dll</source>
  <source>..\Temp\TestLibraryDoc\TestLibraryDoc\Bin\Debug\TestLibraryDoc.xml</source>
</config>